    <svg
      width="100%"
      height="100%"
      viewBox="0 0 160 36"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      overflow="visible"
      preserveAspectRatio="xMinYMid meet"
    >
      <style>
        /* Load Great Vibes from Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap');

        /* Emoji tspan uses common color-emoji fonts as fallback */
        .emoji {
          font-family:
            'Apple Color Emoji', 'Segoe UI Emoji', 'Noto Color Emoji',
            'Twemoji Mozilla', serif;
          font-size: 28px;
          /* emoji color typically comes from the system font and may ignore 'fill' */
        }

        .logo-text {
          font-family: 'Great Vibes', cursive;
          font-size: 28px;
          fill: #17191e;
        }

        /* dark-mode helper like in your component */
        .dark\:fill-\[\#fdfdfd\] .logo-text {
          fill: #fdfdfd;
        }
      </style>

      <g
        id="svgGroup"
        class="dark:fill-[#fdfdfd]"
        fill-rule="evenodd"
        stroke-linecap="round"
